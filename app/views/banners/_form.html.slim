.column.is-half.is-offset-one-quarter
  .card
    = form_with(model: banner, local: true) do |form|
      .card-content
        .content
          .field
            = form.label :message, "Message", class: "label"
            .control
              = form.text_area :message, \
                               class: "textarea  #{'is-danger' if banner.errors.include?(:message)}", \
                               placeholder: "Message"
            - banner.errors.full_messages_for(:message).each do |message|
              p.help.is-danger = message
          .field
            = form.label :start_date, "Début", class: "label"
            .control
              = form.date_field :start_date, \
                                class: "input  #{'is-danger' if banner.errors.include?(:start_date)}", \
                                value: banner.start_date.nil? ? Date.today : banner.start_date
            - banner.errors.full_messages_for(:start_date).each do |message|
              p.help.is-danger = message
          .field
            = form.label :end_date, "Fin", class: "label"
            .control
              = form.date_field :end_date, \
                                class: "input  #{'is-danger' if banner.errors.include?(:end_date)}", \
                                value: banner.end_date.nil? ? Date.today : banner.end_date
            - banner.errors.full_messages_for(:end_date).each do |message|
              p.help.is-danger = message
      footer.card-footer
        .field.is-grouped.is-grouped-right.card-footer-item
          .control
            = form.button class: "button is-link"
              = icon_text("fas fa-save", "Enregistrement")
          .control
            = link_to "Retour arrière", banners_path, class: "button is-link is-light"
